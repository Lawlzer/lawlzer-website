{
	"git": {
		"deploymentEnabled": {
			"main": false,
			"staging": true
		}
	},
	"env": {
		"NEXT_PUBLIC_SCHEME": "https",
		"NEXT_PUBLIC_FRONTEND_PORT": "443",
		"NEXT_PUBLIC_SECOND_LEVEL_DOMAIN": "lawlzer-website",
		"NEXT_PUBLIC_TOP_LEVEL_DOMAIN": "vercel.app"
	},
	"framework": "nextjs",
	"buildCommand": "bash scripts/vercel-build.sh",
	"devCommand": "npm run dev",
	"installCommand": "echo 'Install handled by build script'",
	"outputDirectory": ".next",
	"ignoreCommand": "if [ \"$VERCEL_GIT_COMMIT_REF\" = \"staging\" ] || [ \"$VERCEL_GIT_PULL_REQUEST_BASE_REF\" = \"staging\" ]; then exit 1; else exit 0; fi",
	"functions": {
		"app/api/**": {
			"maxDuration": 10
		}
	},
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "/api/:path*"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				}
			]
		},
		{
			"source": "/:path*.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		}
	]
}
